### Variables
# Logo key. Use Mod1 for Alt.
set $mod Mod4

set $gaps 4
set $borders 1

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Your preferred terminal emulator
set $term alacritty -e sh -c "tmux att || tmux new -t jyeno"

# menu
set $menu dmenu_run

# swaynagmode
set $nag exec swaynagmode

# WIP brightness wob
set $battery_wob /tmp/battery.wob
