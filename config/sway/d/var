### Variables
# Logo key. Use Mod1 for Alt.
set $mod Mod4

set $gaps 4
set $borders 1

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Your preferred terminal emulator
set $term alacritty -e sh -c "tmux att jyeno || tmux new -t jyeno"

# menu
set $menu alacritty -t menu -e --dimensions 30 40 sh -c "TERMINAL_COMMAND='alacritty -t menu' ~/.config/sway/sway-launcher-desktop.sh"
